<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:background="@color/status_view"
              android:padding="10dp"
              android:textSize="@dimen/text_12"
              android:text="收件人详细地址"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:background="@color/color_divider"
        android:padding="10dp"
        android:textSize="@dimen/text_12"
        android:text="收件人：xxx"/>
    <TextView
        android:id="@+id/phonenum"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:background="@color/color_divider"
        android:padding="10dp"
        android:textSize="@dimen/text_12"
        android:text="手   机："/>
    <TextView
        android:id="@+id/address"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:background="@color/color_divider"
        android:padding="10dp"
        android:textSize="@dimen/text_12"
        android:text="地   址："/>
    <TextView
        android:id="@+id/postnum"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:background="@color/color_divider"
        android:padding="10dp"
        android:textSize="@dimen/text_12"
        android:text="邮   编："/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:orientation="horizontal">
        <Button
            android:id="@+id/edit" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_12"
            android:text="编辑"/>
        <Button
            android:id="@+id/delete" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_12"
            android:text="刪除"/>
    </LinearLayout>
</LinearLayout>
