<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:stretchColumns="1" 
    android:orientation="horizontal"
    android:background="@android:color/white"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="clip_vertical"
        android:gravity="clip_vertical"
        tools:ignore="UselessParent"
        android:background="@drawable/secondary_title_bar_bg" >

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:contentDescription="@string/titlebar_left_return_btn"
            android:src="@drawable/btn_back_normal_01"
            android:background="#00000000" 
            android:visibility="visible"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/app_name" 
            android:textSize="@dimen/text_size_20dp"
            android:textColor="@android:color/white"/>

          <Button
            android:id="@+id/right_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1.0"
            android:background="@color/touming_se"
            android:text="设置摄像头WIFI"
            android:textColor="@color/color_white"
            android:textSize="12dp"
            android:gravity="center"
            android:visibility="invisible"
            />
       <!--  <ImageButton
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/titlebar_left_return_btn"
            android:src="@drawable/btn_back_normal_01" 
            android:background="#00000000"
            /> -->
    </TableRow>

</TableLayout>