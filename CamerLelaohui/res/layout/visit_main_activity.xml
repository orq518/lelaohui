<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">

    <include
        android:id="@+id/titlebar"
        layout="@layout/custom_titlebar" />

    <LinearLayout
        android:id="@+id/login_top_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_textView1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:text="@string/login_stuta_camer_1"
            android:textColor="@color/color_green"
            android:textSize="@dimen/text_size_20dp" />

        <ProgressBar
            android:id="@+id/main_model_progressBar1_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_vidion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="探望" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史探望" />

        <Button
            android:id="@+id/btn_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="链接" />
    </LinearLayout>

</LinearLayout>